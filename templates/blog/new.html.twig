{% extends 'adminBase.html.twig' %}

{% block title %}Nouvel article{% endblock %}

{% block body %}
    <h1 class="h2 text-center my-4">Ajouter un article</h1>

    {{ form_start(form) }}
    <div class="form-group mb-3">
        <label class="required" for="article1_title">{{form.title.vars.label}}</label>
        {{ form_errors(form.title) }}
        {{ form_widget(form.title) }}
        {{ form_help(form.title) }}
    </div>
    <div class="form-group mb-3">
        <label class="required" for="article1_content">{{form.content.vars.label}}</label>
        {{ form_errors(form.content) }}
        {{ form_widget(form.content) }}
        {{ form_help(form.content) }}
    </div>
    {{ form_end(form) }}

    <a class="btn defaultBtn my-4 me-1" href="{{ path('blog_index') }}">Retour au blog</a>
    <a class="btn adminBtn my-4 me-1" href="{{ path('blog_admin') }}">Gestion du blog</a>

{% endblock %}
