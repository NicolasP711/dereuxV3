{% extends 'base.html.twig' %}

{% set query = app.request.query.get('q') %}

{% block title %}Résultat(s) de la recherche "{{ query }}"{% endblock %}

{% block body %}
<h1 class="h2 my-4 text-center">Résultat(s) de la recherche <span class="searchResult">"{{ query|length > 10 ? query|slice(0, 25) ~ '...' : query }}"</span></h1>
<p class="text-center my-4">
      {# Création d'un lien permettant de trier par titre #}
      <span class="mx-2">{{ knp_pagination_sortable(articles, 'Trier par titre', 'a.title') }}</span>
      {# Création d'un lien permettant de trier par date #}
      <span class="mx-2">{{ knp_pagination_sortable(articles, 'Trier par date', 'a.publicationDate') }}</span>
    </p>

    <div class="mt-5 mb-3 text-center">
      <div class="d-inline-block">
          {# Affichage du menu permettant de naviguer entre les différentes pages #}
          {{ knp_pagination_render(articles) }}
      </div>
    </div>

    <p class="text-center">Nombre total d'articles : {{ articles.getTotalItemCount }}</p>
    <a class="createArticleBtn btn btn-success mb-2 me-2" href="{{ path('blog_new')}}"><i class="fas fa-plus me-2"></i>Créer un article</a>


    <!-- Click on Modal Button -->
<button type="button" class="createArticleBtn btn btn-primary mb-2" data-bs-toggle="modal" data-bs-target="#modalForm">
  <i class="fas fa-search me-2"></i>Rechercher
</button>

<!-- Modal -->
<div class="modal fade" id="modalForm" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
          <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Rechercher un article</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              <form action="" method="GET">
                  <div class="mb-3">
                      <label class="form-label">Rechercher un article</label>
                      <input type="text" class="form-control" id="article" name="q" placeholder="Rechercher...." />
                  </div>
                  <div class="modal-footer d-block">
                      <button type="submit" class="btn btn-warning float-end">Rechercher</button>
                  </div>
              </form>
          </div>
      </div>
  </div>
</div>

    <div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Titre</th>
            <th scope="col">Contenu</th>
            <th scope="col">Date de publication</th>
            <th scope="col">Auteur</th>
            <th scope="col">Actions</th>

          </tr>
        </thead>
        <tbody>
            {% for article in articles %}
          <tr>
              <td>{{ article.id }}</td>
            <td><b>{{ article.title|striptags|slice(0,40) }}</b></td>
            <td>{{ article.content|striptags|slice(0,40) }}</td>
            <td>{{ article.publicationDate ? article.publicationDate|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{article.author.pseudonym}}</td>
            <td>
                <div class="d-flex">
                    <a target="_blank" class="btn btn-primary me-1" href="{{ path('blog_show', {'slug': article.slug}) }}">Afficher</a>
                    <a target="_blank" class="btn btn-primary me-1" href="{{ path('blog_edit', {'slug': article.slug}) }}">Éditer</a>
                    <form method="post" action="{{ path('blog_delete', {'slug': article.slug}) }}" onsubmit="return confirm('Souhaitez vous vraiment supprimer cet article ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                        <button class="btn btn-danger">Supprimer</button>
                    </form>
                </div>

            </td>
          </tr>
          {% else %}
          <tr>
              <td colspan="12" class="text-center">Aucun article trouvé</td>
          </tr>
      {% endfor %}
        </tbody>
      </table>
      </div>
      <div class="mt-5 mb-3 text-center">
        <div class="d-inline-block">
            {# Affichage du menu permettant de naviguer entre les différentes pages #}
            {{ knp_pagination_render(articles) }}
        </div>
      </div>

      {% endblock %}
