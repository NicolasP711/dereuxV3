{% extends 'base.html.twig' %}

{% set query = app.request.query.get('q') %}

{% block title %}Gestion du blog{% endblock %}

{% block body %}
  {% include 'partials/flashes/error.html.twig' %}
  {% include 'partials/flashes/success.html.twig' %}
    <h1 class="h2 my-4 text-center">Gestion du blog</h1>

    <div class="mb-4 text-center">
      <div class="d-inline-block">
          {# Affichage du menu permettant de naviguer entre les différentes pages #}
          {{ knp_pagination_render(articles) }}
      </div>
    </div>

    <p class="text-center"><b>Nombre total d'articles:</b> {{ articles.getTotalItemCount }}</p>
    <a class="createArticleBtn btn defaultBtn mb-2 me-2" href="{{ path('admin_blog_new')}}"><i class="fas fa-plus me-2"></i>Créer un article</a>

    <!-- Click on Modal Button -->
<button type="button" class="createArticleBtn btn altBtn mb-2" data-bs-toggle="modal" data-bs-target="#modalForm">
  <i class="fas fa-search me-2"></i>Rechercher
</button>

<!-- Modal -->
<div class="modal fade" id="modalForm" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
          <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Rechercher un article</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              <form action="{{ path('admin_article_search') }}" method="GET">
                  <div class="mb-3">
                      <label class="form-label">Rechercher un article</label>
                      <input required type="text" class="form-control" id="article" name="q" placeholder="Rechercher...." />
                  </div>
                  <div class="modal-footer d-block">
                      <button type="submit" class="btn altBtn float-end">Rechercher</button>
                  </div>
              </form>
          </div>
      </div>
  </div>
</div>


    <div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">{{ knp_pagination_sortable(articles, 'Id', 'a.id') }}</th>
            <th scope="col">{{ knp_pagination_sortable(articles, 'Titre', 'a.title') }}</th>
            <th scope="col">{{ knp_pagination_sortable(articles, 'Contenu', 'a.content') }}</th>
            <th scope="col">{{ knp_pagination_sortable(articles, 'Date de publication', 'a.publicationDate') }}</th>
            <th scope="col">Auteur</th>
            <th scope="col">Actions</th>

          </tr>
        </thead>
        <tbody>
            {% for article in articles %}
          <tr>
              <td>{{ article.id }}</td>
            <td><b>{{ article.title|length > 40 ? article.title|striptags|slice(0, 40) ~ '…' : article.title|striptags  }}</b></td>
            <td>{{ article.content|length > 40 ? article.content|striptags|slice(0, 40) ~ '…' : article.content|striptags  }}</td>
            <td>{{ article.publicationDate ? article.publicationDate|date('d/m/Y H:i:s') : '' }}</td>
            <td>{% if article.author is empty %}<b>Utilisateur supprimé</b>{% else %}<b>{{ article.author.pseudonym }}</b>{% endif %}</td>
            <td>
                <div class="d-flex">
                    <a class="me-2" href="{{ path('blog_show', {'slug': article.slug}) }}"><i class="far fa-eye"></i></a>
                    <a class="me-2" href="{{ path('admin_blog_edit', {'slug': article.slug}) }}"><i class="fas fa-edit"></i></a>
                    <form method="post" action="{{ path('admin_blog_delete', {'slug': article.slug}) }}" onsubmit="return confirm('Souhaitez vous vraiment supprimer cet article ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                        <button id="deleteIcon"><i class="fas fa-trash"></i></button>
                    </form>
                </div>

            </td>
          </tr>
          {% else %}
          <tr>
              <td colspan="12" class="text-center">Aucun article trouvé</td>
          </tr>
      {% endfor %}
        </tbody>
      </table>
      </div>
      <div class="mt-5 mb-3 text-center">
        <div class="d-inline-block">
            {# Affichage du menu permettant de naviguer entre les différentes pages #}
            {{ knp_pagination_render(articles) }}
        </div>
      </div>

      {% endblock %}
