{% extends 'base.html.twig' %}

{% block title %}Éditer un commentaire{% endblock %}

{% block body %}
    <h1 class="my-4 text-center">Éditer un commentaire</h1>

    {{ include('blog/_form.html.twig') }}
    <div id="profilBtn" class="mt-5">

        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn adminBtn mb-5" href="{{ path('blog_admin') }}">Gestion du blog</a>
        {% endif %}
        <a class="btn defaultBtn mb-5" href="{{ path('blog_index') }}">Retour aux articles</a>
        <form method="post" action="{{ path('delete_article_comment', {'slug': articleComment.slug, csrf_token: csrf_token('delete_article_comment_' ~ articleComment.id)}) }}" onsubmit="return confirm('Souhaitez vous vraiment supprimer ce commentaire ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ articleComment.id) }}">
            <button class="btn btn-danger mb-5">Supprimer</button>
        </form>
        

    </div>
{% endblock %}
