{% extends 'base.html.twig' %}

{% block title %}Modifier mon mot de passe{% endblock %}

{% block body %}


{% include 'partials/flashes/error.html.twig' %}
{% include 'partials/flashes/success.html.twig' %}

    <h1 class="text-center mt-4">Modifier mon mot de passe</h1>

    <div class="registerForm offset-3 col-6 offset-3 mt-5">
    {{ form_start(editPasswordForm) }}
        <div class="form-group mb-3">
            {{ form_label(editPasswordForm.currentpassword) }}
            <div class="input-group mb-3">
            {{ form_widget(editPasswordForm.currentpassword) }}
            <span class="input-group-text" id="basic-addon1"><i id="togglePassword" class="fas fa-eye" onclick="toggleCurrentPasswordEditPassword()"></i></span>
            </div>
            <small>{{ form_help(editPasswordForm.currentpassword) }}</small>
        </div>
        <div class="form-group mb-3">
            {{ form_label(editPasswordForm.plainPassword.password) }}
            <div class="input-group mb-3">
                {{ form_widget(editPasswordForm.plainPassword.password) }}
                <span class="input-group-text" id="basic-addon1"><i id="togglePassword1" class="fas fa-eye" onclick="toggleCurrentPassword3()"></i></span>
                <small>{{ form_help(editPasswordForm.plainPassword.password) }}</small>
            </div>
        </div>

        <div class="form-group mb-3">
            {{ form_label(editPasswordForm.plainPassword.confirm) }}
            <div class="input-group mb-3">
                {{ form_widget(editPasswordForm.plainPassword.confirm) }}
                <span class="input-group-text" id="basic-addon1"><i id="togglePassword2" class="fas fa-eye" onclick="toggleCurrentPassword4()"></i></span>
            </div>
        </div>
        <div class="form-group mb-3">
        <button class="btn btn-primary">Modifier mon mot de passe</button>
        </div>
    {{ form_end(editPasswordForm) }}
    </div>

    

{% endblock %}
