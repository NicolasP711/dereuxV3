{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

    {% include 'partials/flashes/error.html.twig' %}
    {% include 'partials/flashes/success.html.twig' %}

    <div class="parent">
            <div class="enfant offset-md-3 col-md-6 offset-md-3">
                <h2 class="h1 mt-4 text-center">Contactez-nous</h2>
                <p class="text-center my-3">Nous vous répondrons dans les plus brefs délais.</p>

                {{ form_start(contactForm) }}
                <div class="form-group mb-3">
                    {{ form_row(contactForm.name) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_row(contactForm.email) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_row(contactForm.subject) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_row(contactForm.message) }}
                </div>
                <div class="form-group mb-3">
                    {{ form_row(contactForm.save) }}
                </div>
                {{ form_end(contactForm) }}
            </div>
    </div>
    

{% endblock %}

