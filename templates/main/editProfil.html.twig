{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}


{% include 'partials/flashes/error.html.twig' %}
{% include 'partials/flashes/success.html.twig' %}

    <h1 class="h2 text-center mt-4">Modifier mon profil</h1>

    <div class="offset-lg-3 col-lg-6 offset-lg-3 mt-5">
        {{ form_start(editProfilForm) }}
        {{ form_errors(editProfilForm) }}
        <div class="form-group mb-3">
            <label class="required" for="edit_user_form_pseudonym">{{editProfilForm.pseudonym.vars.label}}</label>
            {{ form_errors(editProfilForm.pseudonym) }}
            {{ form_widget(editProfilForm.pseudonym) }}
            {{ form_help(editProfilForm.pseudonym) }}
        </div>
        <div class="form-group mb-3">
            <label class="required" for="edit_user_form_email">{{editProfilForm.email.vars.label}}</label>
            {{ form_errors(editProfilForm.email) }}
            {{ form_widget(editProfilForm.email) }}
            {{ form_help(editProfilForm.email) }}
        </div>


        <div class="form-group mb-3">
            <label class="required" for="edit_user_form_currentpasword">{{editProfilForm.currentpassword.vars.label}}</label>
            {{ form_errors(editProfilForm.currentpassword) }}
            <div class="input-group mb-3">
                {{ form_widget(editProfilForm.currentpassword) }}
                <span class="input-group-text" id="basic-addon1"><i id="togglePassword" class="fas fa-eye" onclick="toggleCurrentPassword()"></i></span>
            </div>
            {{ form_help(editProfilForm.currentpassword) }}
        </div>

        <div class="form-group mb-3">
            <button type="submit" id="loginBtn" class="btn defaultBtn w-100">Modifier</button>
        </div>
    {{ form_end(editProfilForm) }}
    </div>

    

{% endblock %}
