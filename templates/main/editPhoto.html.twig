{% extends 'base.html.twig' %}

{% block title %}Modifier mon image de profil{% endblock %}

{% block body %}

    <h1 class="text-center my-5">Modifier ma photo de profil</h1>

        <div class="">
            {{ form_start(photoForm) }}
            <div class="form-group mb-3">
                {{ form_row(photoForm.photo) }}
            </div>
            <div class="form-group mb-3">
                {{ form_row(photoForm.save) }}
            </div>
            {{ form_end(photoForm) }}
        </div>


{% endblock %}

{% block js %}
    <script>
        // Code JQuery permettant d'afficher dynamiquement un texte ainsi que le nom du fichier actuellement sélectionné dans le champ
        $('.change-photo-form .custom-fil-label').text('Choisir un fichier');

        $('.change-photo-form .custom-file-input').change(function(){
            $(this).next('.custom-file-label').html( $(this).val().replace('C:\\fakepath\\', " ") );
        });
    </script>
{% endblock %}

