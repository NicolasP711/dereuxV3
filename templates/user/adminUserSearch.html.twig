{% extends 'adminBase.html.twig' %}

{% set query = app.request.query.get('q') %}

{% block title %}Résultat(s) de la recherche "{{ query }}"{% endblock %}

{% block body %}
<h1 class="h2 my-4 text-center">Résultat(s) de la recherche <span class="searchResult">"{{ query|length > 10 ? query|slice(0, 25) ~ '...' : query }}"</span></h1>

    <div class="mb-4 text-center">
      <div class="d-inline-block">
          {# Affichage du menu permettant de naviguer entre les différentes pages #}
          {{ knp_pagination_render(users) }}
      </div>
    </div>

    <p class="text-center"><b>Nombre d'utilisateur(s) trouvé:</b> {{ users.getTotalItemCount }}</p>
    <a class="createArticleBtn adminBtn btn mb-2 me-2" href="{{ path('admin_user')}}"><i class="fas fa-sync-alt me-2"></i>Réinitaliser les filtres</a>




    <!-- Click on Modal Button -->
<button type="button" class="createArticleBtn btn altBtn mb-2" data-bs-toggle="modal" data-bs-target="#modalForm">
  <i class="fas fa-search me-2"></i>Rechercher
</button>

<!-- Modal -->
<div class="modal fade" id="modalForm" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
          <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Rechercher un utilisateur</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              <form action="" method="GET">
                  <div class="mb-3">
                      <label class="form-label">Rechercher un utilisateur</label>
                      <input required type="text" class="form-control" id="article" name="q" placeholder="Rechercher...." />
                  </div>
                  <div class="modal-footer d-block">
                      <button type="submit" class="btn altBtn float-end">Rechercher</button>
                  </div>
              </form>
          </div>
      </div>
  </div>
</div>

    <div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">{{ knp_pagination_sortable(users, 'Id', 'a.id') }}</th>
            <th scope="col">{{ knp_pagination_sortable(users, 'Pseudonyme', 'a.pseudonym') }}</th>
            <th scope="col">{{ knp_pagination_sortable(users, 'Adresse email', 'a.email') }}</th>
            <th scope="col">{{ knp_pagination_sortable(users, 'Role', 'a.roles') }}</th>
            <th scope="col">{{ knp_pagination_sortable(users, 'Date d\'enregistrement', 'a.registrationDate') }}</th>
            <th scope="col">Actions</th>

          </tr>
        </thead>
        <tbody>
          {% for user in users %}
          <tr>
              <td>{{ user.id }}</td>
            <td><b>{{ user.pseudonym|length > 40 ? user.pseudonym|striptags|slice(0, 40) ~ '…' : user.pseudonym|striptags  }}</b></td>
            <td>{{ user.email|length > 40 ? user.email|striptags|slice(0, 40) ~ '…' : user.email|striptags  }}</td>
            <td>{% if user.roles[0] == 'ROLE_ADMIN' %}Administrateur{% else %}Utilisateur{% endif %}</td>
            <td>{{ user.registrationDate ? user.registrationDate|date('d/m/Y H:i:s') : '' }}</td>
            <td>
                <div class="d-flex">
                  <a class="me-2" href="{{ path('user_show', {'id': user.id}) }}) }}"><i class="far fa-eye"></i></a>
                  {% if user.roles[0] == 'ROLE_ADMIN' %}
                  {% else %}
                    <a id="deleteIcon" href="{{ path('admin_delete_account', {'id': user.id}) }}" onclick="return confirm('Souhaitez vous vraiment supprimer ce compte ?');"><i class="fas fa-trash me-2"></i></a>
                  {% endif %}
                  </div>

            </td>
          </tr>
          {% else %}
          <tr>
              <td colspan="12" class="text-center">Aucun utilisateur trouvé</td>
          </tr>
      {% endfor %}
        </tbody>
      </table>
      </div>
      <div class="mt-5 mb-3 text-center">
        <div class="d-inline-block">
            {# Affichage du menu permettant de naviguer entre les différentes pages #}
            {{ knp_pagination_render(users) }}
        </div>
      </div>

      {% endblock %}
