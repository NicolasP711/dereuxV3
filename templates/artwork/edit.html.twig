{% extends 'adminBase.html.twig' %}

{% block title %}Éditer {{ artwork.title|length > 20 ? artwork.title|slice(0, 20) ~ '…' : artwork.title  }}{% endblock %}

{% block body %}
    <h1 class="h2 text-center my-4">Éditer l'oeuvre :  {{ artwork.title|length > 20 ? artwork.title|slice(0, 20) ~ '…' : artwork.title  }}</h1>

    {{ form_start(form) }}
        <div class="form-group mb-3">
            <label class="required" for="artwork_picture">{{form.picture.vars.label}}</label>
            {{ form_errors(form.picture) }}
            {{ form_widget(form.picture) }}
            {{ form_help(form.picture) }}
        </div>
        <div class="form-group mb-3">
            <label class="required" for="artwork_title">{{form.title.vars.label}}</label>
            {{ form_errors(form.title) }}
            {{ form_widget(form.title) }}
            {{ form_help(form.title) }}
        </div>
        <div class="form-group mb-3">
            <label class="required" for="artwork_artist">{{form.artist.vars.label}}</label>
            {{ form_errors(form.artist) }}
            {{ form_widget(form.artist) }}
            {{ form_help(form.artist) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.yearOfCreation) }}
            {{ form_widget(form.yearOfCreation) }}
            {{ form_help(form.yearOfCreation) }}
        </div>
        <div class="form-group mb-3">
            <label class="required" for="artwork_description">{{form.description.vars.label}}</label>
            {{ form_errors(form.description) }}
            {{ form_widget(form.description) }}
            {{ form_help(form.description) }}
        </div>
        {{ form_errors(form) }}
    {{ form_end(form) }}

    <div id="profilBtn" class="mt-5">

        <a class="btn adminBtn mb-5" href="{{ path('admin_artwork_index') }}">Gestion des oeuvres</a>
        <a class="btn defaultBtn mb-5" href="{{ path('artwork_index') }}">Retour aux oeuvres</a>

        <form method="post" action="{{ path('admin_artwork_delete', {'slug': artwork.slug}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer cette oeuvre ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ artwork.id) }}">
            <button id="deleteBtn" class="btn mb-5">Supprimer</button>
        </form>
    </div>
{% endblock %}
