{% extends 'base.html.twig' %}

{% block title %}Artwork index{% endblock %}

{% block body %}
    <h1>Artwork index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Picture</th>
                <th>Artist</th>
                <th>CreationDate</th>
                <th>PublicationDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artwork in artworks %}
            <tr>
                <td>{{ artwork.id }}</td>
                <td>{{ artwork.title }}</td>
                <td>{{ artwork.description }}</td>
                <td>{{ artwork.picture }}</td>
                <td>{{ artwork.artist }}</td>
                <td>{{ artwork.creationDate ? artwork.creationDate|date('Y-m-d') : '' }}</td>
                <td>{{ artwork.publicationDate ? artwork.publicationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('artwork_show', {'id': artwork.id}) }}">show</a>
                    <a href="{{ path('artwork_edit', {'id': artwork.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('artwork_new') }}">Create new</a>
{% endblock %}
