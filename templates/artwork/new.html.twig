{% extends 'base.html.twig' %}

{% block title %}Nouvelle oeuvre{% endblock %}

{% block body %}
    <h1>Ajouter une oeuvre</h1>

    {{ form_start(form) }}
        <div class="form-group mb-3">
            {{ form_row(form.picture) }}
        </div>
        <div class="form-group mb-3">
            {{ form_row(form.title) }}
        </div>
        <div class="form-group mb-3">
            {{ form_row(form.artist) }}
        </div>
        <div class="form-group mb-3">
            {{ form_row(form.creationDate) }}
        </div>
        <div class="form-group mb-3">
            {{ form_row(form.description) }}
        </div>
        
    <button class="btn">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}

    <a href="{{ path('admin_artwork_index') }}">Retour Ã  la liste des oeuvres</a>
{% endblock %}
