{% extends 'adminBase.html.twig' %}

{% set query = app.request.query.get('q') %}

{% block title %}Gestion des contacts{% endblock %}

{% block body %}
  {% include 'partials/flashes/error.html.twig' %}
  {% include 'partials/flashes/success.html.twig' %}
    <h1 class="h2 my-4 text-center">Gestion des contacts</h1>

    <div class="mb-4 text-center">
      <div class="d-inline-block">
          {# Affichage du menu permettant de naviguer entre les différentes pages #}
          {{ knp_pagination_render(contacts) }}
      </div>
    </div>

    <p class="text-center"><b>Nombre total de contact(s):</b> {{ contacts.getTotalItemCount }}</p>
    <!-- Click on Modal Button -->
<button type="button" class="createArticleBtn btn altBtn mb-2" data-bs-toggle="modal" data-bs-target="#modalForm">
  <i class="fas fa-search me-2"></i>Rechercher
</button>

<!-- Modal -->
<div class="modal fade" id="modalForm" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
          <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Rechercher un contact</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              <form action="{{ path('admin_contact_search') }}" method="GET">
                  <div class="mb-3">
                      <label class="form-label">Rechercher un contact</label>
                      <input required type="text" class="form-control" id="article" name="q" placeholder="Rechercher...." />
                  </div>
                  <div class="modal-footer d-block">
                      <button type="submit" class="btn altBtn float-end">Rechercher</button>
                  </div>
              </form>
          </div>
      </div>
  </div>
</div>


    <div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th class="text-center" scope="col">{{ knp_pagination_sortable(contacts, 'Id', 'a.id') }}</th>
            <th class="text-center" scope="col">{{ knp_pagination_sortable(contacts, 'Nom', 'a.name') }}</th>
            <th class="text-center" scope="col">{{ knp_pagination_sortable(contacts, 'Adresse email', 'a.email') }}</th>
            <th class="text-center" scope="col">{{ knp_pagination_sortable(contacts, 'Sujet', 'a.subject') }}</th>
            <th class="text-center" scope="col">{{ knp_pagination_sortable(contacts, 'Message', 'a.message') }}</th>
            <th class="text-center" scope="col">{{ knp_pagination_sortable(contacts, 'Date d\'envoi', 'a.dateSent') }}</th>
            <th class="text-center" scope="col">Actions</th>

          </tr>
        </thead>
        <tbody>
            {% for contact in contacts %}
          <tr>
            <td class="text-center">{{ contact.id }}</td>
            <td class="text-center"><b>{{ contact.name|length > 20 ? contact.name|striptags|slice(0, 20) ~ '…' : contact.name|striptags  }}</b></td>
            <td class="text-center">{{ contact.email|length > 20 ? contact.email|striptags|slice(0, 20) ~ '…' : contact.email|striptags  }}</td>
            <td class="text-center">{{ contact.subject|length > 20 ? contact.subject|striptags|slice(0, 20) ~ '…' : contact.subject|striptags  }}</td>
            <td class="text-center">{{ contact.message|length > 20 ? contact.message|striptags|slice(0, 20) ~ '…' : contact.message|striptags  }}</td>
            <td class="text-center">{{ contact.dateSent ? contact.dateSent|date('d/m/Y H:i:s') : '' }}</td>
            <td>
                <div class="d-flex">
                    <a class="me-2" href="{{ path('contact_show', {'slug': contact.slug}) }}"><i class="far fa-eye"></i></a>
                    <form method="post" action="{{ path('admin_contact_delete', {'slug': contact.slug}) }}" onsubmit="return confirm('Souhaitez vous vraiment supprimer ce contact ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact.id) }}">
                        <button id="deleteIcon"><i class="fas fa-trash"></i></button>
                    </form>
                </div>

            </td>
          </tr>
          {% else %}
          <tr>
              <td colspan="12" class="text-center">Aucun contact trouvé</td>
          </tr>
      {% endfor %}
        </tbody>
      </table>
      </div>
      <div class="mt-5 mb-3 text-center">
        <div class="d-inline-block">
            {# Affichage du menu permettant de naviguer entre les différentes pages #}
            {{ knp_pagination_render(contacts) }}
        </div>
      </div>

      {% endblock %}
